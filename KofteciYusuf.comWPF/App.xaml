<Application x:Class="KofteciYusuf.comWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KofteciYusuf.comWPF"
             StartupUri="Izgaraetlermenü.xaml">
    <Application.Resources>
        <!--kategorilerde seçili butonun rengini ayarlar-->
        <Style x:Key="buton" TargetType="Button">
            
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>

        </Style>
        <!--kategorilerde seçilmeyen butonun rengini ayarlar-->

        <Style x:Key="secilmeyenbuton" TargetType="Button">

            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>

        </Style>
        
        <Style x:Key="ürünler" TargetType="Button">
            <Setter Property="Height" Value="110"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        
        
        
    </Application.Resources>
</Application>
